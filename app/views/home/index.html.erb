<div class="container mt-5">
  <div class="row">
    <% @products.each do |p| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h3> <%= p.name %> </h3>
          </div>
          <div class="card-body">
            <p> <%= p.description %> </p>
            <p> <%= p.product_categories.first.category.name %> </p>
            <p> <%= p.brand.name %> </p>
            <p> <%= p.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>







