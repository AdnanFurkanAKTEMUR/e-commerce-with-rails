<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <img src="https://dosya.turkmmo.com/2020/08/31970_1e14f2f1e49479f32f4a50c57603251b.png" width="100%">
    </div>
    <div class="col-md-7">
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>İsim: <%= @product.name %></td>
          </tr>
          <tr>
            <td>Fiyat: <%= @product.price %></td>
          </tr>
          <tr>
            <td>Açıklama: <%= @product.description %></td>
          </tr>
          <tr>
            <td>Uyumluluk: <%= @product.compatibility %></td>
          </tr>
          <tr>
            <td>Özellikler: <%= @product.feature %></td>
          </tr>
          <tr>
            <td>
              <div class="d-grid gap-2">
                <%= link_to "Sepete Ekle", product_path(@product.id), class:"btn btn-success" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>